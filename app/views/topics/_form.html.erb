<%= form_for ([@forum, @topic]),:html => { :class => 'form-horizontal' } do |f| %>
  <%= f.hidden_field :user_id,:value=>current_user.id, :class => 'text_field' %>
  <%= f.hidden_field :forum_id, :value =>@forum.id, :class => 'text_field' %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field',required: true %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'ckeditor ',required: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :tag_list,"Tags", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tag_list, :class => 'text_field tags' %>
    </div>
  </div>  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary butt' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                forum_topics_path, :class => 'btn' %>
  </div>
<% end %>

<script type="text/javascript">
$(document).ready(function() {
  $("#topic_tag_list").tagsInput();
  $('.ckeditor').ckeditor({
   // optional config
  });
})
</script>

<style>
  .text_field{
    width: 99%;
  }
  .tags{
    width: 99%;
  }
</style>